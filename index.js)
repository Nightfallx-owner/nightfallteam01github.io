require("dotenv").config();
const express = require("express");
const cors = require("cors");
const TelegramBot = require("node-telegram-bot-api");

const app = express();
app.use(cors());
app.use(express.json());

// Telegram bot
const token = process.env.BOT_TOKEN;
const bot = new TelegramBot(token, {polling: true});

// Simple in-memory DB
let users = [];

// Telegram bot listener
bot.on("message", (msg) => {
  const chatId = msg.chat.id;
  const text = msg.text;

  if(text.startsWith("/start")){
    bot.sendMessage(chatId,"Username kiriting:");
    return;
  }

  // username tekshiruv
  const exists = users.find(u=>u.username===text);
  if(exists){
    bot.sendMessage(chatId,"❌ Bu username band");
    return;
  }

  // Save new user
  users.push({chatId, username: text});
  bot.sendMessage(chatId,"✅ Username qabul qilindi. Endi saytga kira olasiz!");
});

// Backend endpoint → Community users
app.get("/users",(req,res)=>{
  res.json(users);
});

const PORT = process.env.PORT || 3000;
app.listen(PORT,()=>console.log(`Server running on port ${PORT}`));
